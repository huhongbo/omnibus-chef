topicprefix = /topic/
main_collective = mcollective
collectives = mcollective
identity = <%= @node['fqdn'] %>
libdir = /opt/chef-server/embedded/service/mcollective/plugins
logfile = <%= node['chef_server']['mcollective']['log_directory'] %>
loglevel = info
daemonize = 1

# Plugins
securityprovider = psk
plugin.psk = unset

connector = stomp
plugin.stomp.host = <%= node['chef_server']['mcollective']['stomp']['hostname'] %>
plugin.stomp.port = <%= node['chef_server']['mcollective']['stomp']['port'] %>
plugin.stomp.user = <%= node['chef_server']['mcollective']['stomp']['username'] %>
plugin.stomp.password = <%= node['chef_server']['mcollective']['stomp']['password'] %>

# Facts
factsource = yaml
plugin.yaml = /etc/mcollective/facts.yaml

# Classes
classesfile = /var/tmp/chefnode.txt
